<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/buildModelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Build.Model"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/deviceIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildModelTextView"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="DeviceId"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/subscriberIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceIdTextView"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="SubscriberId"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subscriberIdTextView"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black" />

</RelativeLayout>