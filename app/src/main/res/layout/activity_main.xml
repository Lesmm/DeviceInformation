<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/buildModelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:text="Build.Model" />

    <TextView
        android:id="@+id/deviceIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="18dp"
        android:layout_below="@+id/buildModelTextView"
        android:textColor="@color/black"
        android:text="DeviceId" />

    <TextView
        android:id="@+id/subscriberIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="18dp"
        android:layout_below="@+id/deviceIdTextView"
        android:textColor="@color/black"
        android:text="SubscriberId" />

    <com.google.deviceinfo.MainActivityLoadingView
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />


</RelativeLayout>